<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/libs/bootstrap/css/bootstrap.css">
    <script src="/libs/jquery/jquery-2.1.3.js"></script>
    <script src="/libs/bootstrap/js/bootstrap.js"></script>
</head>
<body>
<script src="/libs/jquery/jquery-2.1.3.js"></script>
<script src="/libs/bootstrap/js/bootstrap.js"></script>
<h1><%= title %></h1>

<p>Welcome to <%= title %></p>


<form action="/login" method="post" class="form-horizontal">
    <fieldset class="col-md-6">
        <legend><h3>Login</h3></legend>
        <div class="form-group">
            <label for="username" class="col-lg-2 control-label">Username</label>

            <div class="col-lg-10">
                <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Password</label>

            <div class="col-lg-10">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <input type="submit" class="btn btn-primary" value="Login">
            </div>
        </div>
    </fieldset>
</form>
<form action="/register" class="form-horizontal" method="post">
    <fieldset class="col-md-6">
        <legend><h3>Register</h3></legend>
        <div class="form-group">
            <label for="username" class="col-lg-2 control-label">Username</label>

            <div class="col-lg-10">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-2 control-label">Name</label>

            <div class="col-lg-10">
                <input type="text" class="form-control" id="name" placeholder="Name" required>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Password</label>

            <div class="col-lg-10">
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
            </div>
        </div>
        <div class="form-group">
            <label for="isEmployee" class="col-lg-2 control-label">Are you an Employee?</label>

            <div class="col-lg-10">
                <input type="checkbox" class="checkbox" name="isEmployee" id="isEmployee">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <input type="submit" class="btn btn-primary" value="Register">
            </div>
        </div>
    </fieldset>
</form>
</body>
</html>
